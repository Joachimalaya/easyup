<GridPane xmlns:fx="http://javafx.com/fxml/1" styleClass="root" hgap="5" vgap="5" fx:controller="ui.MainController">
    <padding>
        <Insets top="5" right="5" bottom="5" left="5"/>
    </padding>


    <Button GridPane.columnIndex="0" GridPane.rowIndex="0" text="UPLOAD" onAction="#handleUploadAction"/>

    <TableView GridPane.columnIndex="2" GridPane.rowIndex="0" GridPane.rowSpan="2" fx:id="keyTable">
        <columns>
            <TableColumn text="Key" prefWidth="${keyTable.width*0.3}"/>
            <TableColumn text="Value" prefWidth="${keyTable.width*0.7}"/>
        </columns>
        <items>
            <FXCollections fx:factory="observableArrayList">

            </FXCollections>
        </items>
    </TableView>

    <Text GridPane.columnIndex="1" GridPane.rowIndex="2" text="Title"/>
    <TextField GridPane.columnIndex="2" GridPane.rowIndex="2" fx:id="titlePreview" editable="false"/>

    <Text GridPane.columnIndex="1" GridPane.rowIndex="3" text="Description"/>
    <TextArea GridPane.columnIndex="2" GridPane.rowIndex="3" GridPane.rowSpan="2" fx:id="descriptionPreview"
              editable="false"/>

    <!-- TODO: add widgets -->

    <columnConstraints>
        <ColumnConstraints hgrow="NEVER" minWidth="10.0"
                           prefWidth="100.0"/>
        <ColumnConstraints hgrow="NEVER" minWidth="10.0"
                           prefWidth="100.0"/>
        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0"
                           prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints vgrow="NEVER"/>   <!-- 0 -->
        <RowConstraints vgrow="ALWAYS"/>   <!-- 1 -->
        <RowConstraints vgrow="NEVER"/>   <!-- 2 -->
        <RowConstraints vgrow="NEVER"/>   <!-- 3 -->
        <RowConstraints vgrow="ALWAYS"/>   <!-- 4 -->
    </rowConstraints>
</GridPane>
